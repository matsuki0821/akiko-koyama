---
const props = Astro.props as {
  title?: string;
  body?: string;
  primaryText?: string;
  primaryHref?: string;
  secondaryText?: string;
  secondaryHref?: string;
};
---

<section class="section pb-14">
  <div class="rounded-3xl bg-gradient-to-b from-primary/5 to-white p-8 ring-1 ring-primary/20 card text-center">
    <h2 class="text-xl font-semibold text-base-900">{props.title ?? "「イライラや不安に振り回されない日常を、今から始めませんか？」"}</h2>
    {props.body && (
      <p class="mt-2 text-base-900/70">{props.body}</p>
    )}
    <div class="mt-6 flex flex-wrap gap-3 justify-center">
      <a href={props.primaryHref ?? "/contact"} class="btn-cta rounded-full">
        {props.primaryText ?? "無料相談を申し込む"}
      </a>
      {/* 資料ボタンは非表示 */}
    </div>
  </div>
  <script is:inline>
    // no-op; reserved for future minor interactions if needed
  </script>
  
</section>


