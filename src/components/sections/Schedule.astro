---
type ScheduleRow = {
  course: string; // 例: 10月コース 最終募集 / 7月コース
  dateText: string; // 例: 10/07(火) 開始
};

// ユーザー指定の並び順で上から表示
const rows: ScheduleRow[] = [
  { course: '10月コース 最終募集', dateText: '10/07(火) 開始' },
  { course: '10月コース 追加募集', dateText: '10/03(金) 開始' },
  { course: '10月コース', dateText: '10/01(水) 開始' },
  { course: '7月コース', dateText: '7/20(日) 開始' },
  { course: '6月コース', dateText: '6/10(火) 開始' },
  { course: '5月コース', dateText: '5/29(木) 開始' },
];
---

<section id="schedule" class="section py-20">
  <div class="max-w-6xl mx-auto px-4">
    <div class="text-center">
      <h2 class="text-2xl font-semibold text-base-900 sm:text-3xl">開講日程</h2>
    </div>

    <div class="mt-6 overflow-x-auto">
      <table class="min-w-full table-auto border-collapse">
        <thead>
          <tr class="bg-base-50">
            <th class="whitespace-nowrap px-4 py-3 text-left text-sm font-semibold text-base-800">コース</th>
            <th class="whitespace-nowrap px-4 py-3 text-left text-sm font-semibold text-base-800">日程</th>
            <th class="whitespace-nowrap px-4 py-3 text-left text-sm font-semibold text-base-800">ステータス</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-black/5 bg-white">
          {rows.map((r) => (
            <tr>
              <td class="px-4 py-3 text-base-900 text-sm sm:text-base">{r.course}</td>
              <td class="px-4 py-3 text-base-900/80 text-sm sm:text-base">{r.dateText}</td>
              <td class="px-4 py-3">
                <span style="background-color:#d9534f" class="inline-flex items-center rounded-full px-2.5 py-1 text-xs font-semibold text-white align-middle">
                  満席
                </span>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
    <div class="mt-10 flex justify-center">
      <a href="/contact" class="btn-cta">次回の開催について問い合わせる</a>
    </div>
  </div>
</section>


