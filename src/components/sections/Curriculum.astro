---
type Lesson = { range: string; title: string };
type Section = {
  title: string;
  total: string;
  lessons: Lesson[];
};

const sections: Section[] = [
  {
    title: '不安型完璧主義',
    total: '全5時間',
    lessons: [
      { range: '1-2時間', title: '不安型完璧主義の基本概念と行動分析学・行動療法・認知行動療法' },
      { range: '3-5時間', title: '不安型完璧主義への介入ステップと子育てスタイル' }
    ]
  },
  {
    title: '認知行動療法',
    total: '全4時間',
    lessons: [
      { range: '6-7時間', title: '認知行動療法の基礎知識' },
      { range: '8-9時間', title: '事実と解釈＆目標設定' }
    ]
  },
  {
    title: '認知の歪みとリフレーミング',
    total: '全6時間',
    lessons: [
      { range: '10-11時間', title: '認知の歪み' },
      { range: '12-13時間', title: 'アサーティブコミュニケーション' },
      { range: '14-16時間', title: 'リフレーミングと介入の境界線・トラウマ・恒常性' }
    ]
  }
];
---

<section id="curriculum" class="section py-20 bg-base-100">
  <h2 class="text-2xl font-semibold text-center text-base-900 sm:text-3xl">講座カリキュラム</h2>
  <p class="mt-2 text-center text-base-900/70 text-[15px]">
    全16時間の講座で構成されたカリキュラムで、認知行動療法、アサーティブコミュニケーション、リフレーミングを体系的に学びます。
  </p>

  <div class="mt-6 flex justify-center">
    <button class="rounded-full bg-primary px-5 py-2 text-sm font-medium text-white shadow hover:bg-primary-600">
      本講座（全16時間）
    </button>
  </div>

  <div class="mt-10 space-y-8">
    {sections.map((s) => (
      <div class="rounded-2xl bg-white p-6 shadow-card ring-1 ring-primary/10">
        <div class="flex items-center justify-between border-b border-primary/10 pb-2">
          <h3 class="font-semibold text-base-900">{s.title}</h3>
          <span class="rounded-full bg-primary/10 px-2.5 py-0.5 text-xs font-semibold text-primary">{s.total}</span>
        </div>

        <ul class="mt-4 space-y-3">
          {s.lessons.map((l) => (
            <li class="flex items-center gap-3 rounded-lg bg-base-100 px-4 py-2 text-sm">
              <span class="inline-flex items-center justify-center rounded-full bg-primary px-3 py-1 text-xs font-semibold text-white">
                {l.range}
              </span>
              <span class="text-base-900/80">{l.title}</span>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>


