---
import '../styles/tailwind.css';
import SeoHead from '@/components/layout/SeoHead.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
// React版Heroは置換のため未使用
import NewHero from '@/components/sections/Hero.astro';
import Features from '@/components/sections/Features.astro';
import SimplePromptShowcaseSticky from '@/components/sections/SimplePromptShowcaseSticky.tsx';
import TestimonialsMasonry from '@/components/TestimonialsMasonry.astro';
import TestimonialsMarquee from '@/components/TestimonialsMarquee.tsx';
import { getCollection } from 'astro:content';
import CTA from '@/components/CTA.astro';
import Faq from '@/components/Faq.astro';
import Schedule from '@/components/sections/Schedule.astro';
import Curriculum from '@/components/sections/Curriculum.astro';

// no data fetch needed here; masonry component reads testimonials itself
const title = "認知行動療法×行動療法の認定講座トップ｜WHOLE LIFE";
const description = "認定講座で行動療法×認知行動療法を体系的に学び、自分や家族の不安型完璧主義を乗り越える支援力を身につけませんか。無料相談受付中。";
---
<html lang="ja">
  <SeoHead title={title} description={description} />
  <body>
    <Header />
    <div class="relative isolate">
      <NewHero />
      
    </div>


    <SimplePromptShowcaseSticky client:load
      subtitle="誰かの役に立ちたい人も、自分の悩みを解決したい人も、ここから始められる"
    />

    <Features />

    <!-- 受講者の声セクションを強調表示（上位に配置済み） -->
    <section class="section py-16">
      <h2 class="text-2xl sm:text-3xl font-bold text-center text-base-900">受講者の声</h2>
    </section>
    <TestimonialsMarquee client:load speed={80} items={(await getCollection('testimonials')).map((t) => ({ name: t.data.name, affiliation: t.data.affiliation, avatar: t.data.avatar, quote: t.data.quote }))} />

    <Schedule />

    <Curriculum />

    <Faq />

    <CTA title="「イライラや不安に振り回されない日常を、今から始めませんか？」" primaryText="無料相談を申し込む" primaryHref="/contact" />

    <Footer />
  </body>
</html>


