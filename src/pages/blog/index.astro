---
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import SeoHead from '@/components/layout/SeoHead.astro';
import { getCollection } from 'astro:content';
const posts = (await getCollection('blog')).sort((a,b)=> +new Date(b.data.date) - +new Date(a.data.date));
---
<html lang="ja">
  <SeoHead title="Blog – WHOLE LIFE" />
  <body>
    <Header />
    <main class="section py-16">
      <h1 class="text-3xl font-bold">Blog</h1>
      <div class="mt-8 rounded-xl bg-white ring-1 ring-black/5 shadow-card p-8 text-center">
        <p class="text-base text-base-900/70">準備中です。公開まで今しばらくお待ちください。</p>
      </div>
    </main>
    <Footer />
  </body>
</html>


