---
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import SeoHead from '@/components/layout/SeoHead.astro';
import { getCollection } from 'astro:content';
// Markdown/MDXはContent Collectionsのrender()を利用

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((p) => ({ params: { slug: p.slug }, props: { entry: p } }));
}

const { entry } = Astro.props as { entry: any };
const { Content } = await entry.render();
---
<html lang="ja">
  <SeoHead title={`準備中 – Blog`} />
  <body>
    <Header />
    <main class="section py-16">
      <h1 class="text-3xl font-bold">Blog</h1>
      <div class="mt-8 rounded-xl bg-white ring-1 ring-black/5 shadow-card p-8 text-center">
        <p class="text-base text-base-900/70">準備中です。公開まで今しばらくお待ちください。</p>
      </div>
    </main>
    <Footer />
  </body>
</html>


